<div class="container">
  <div class="row justify-content-center">
    <div class ="col-10">
      <%= render 'shared/errors', obj: @article %>
      <%= form_with(model: @article, class:"shadow p-3 mb-3 bg-light rounded", local: true) do |f|%>

        <div class="row mb-3">
          <%= f.label :title, class:"col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :description, class:"col-2 col-form-label" %><br />
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
          </div>
        </div>

        <div class="input-group justify-content-center mb-3">
          <%= f.submit class:"btn btn-primary"%>
        </div>
      <% end %>
    </div>
    <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-center" %>
  </div>
</div>