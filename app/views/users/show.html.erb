<h1 class="text-center mt-4"><%= @user.username%>'s profile </h1>

<%= gravatar_for @user, size: 200%>

<% if logged_in? and @user == current_user %>
  <div class="text-center mt-4">
    <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-info" %>
  </div>
<% end %>

<h3 class="text-center mt-4"> Articles </h3>

<div>
  <%= will_paginate @articles, renderer: WillPaginate::ActionView::BootstrapLinkRenderer, list_classes: %w(pagination justify-content-center) %>
</div>

<%= render 'articles/article' %>

<div class="p-5">
  <%= will_paginate @articles, renderer: WillPaginate::ActionView::BootstrapLinkRenderer, list_classes: %w(pagination justify-content-center) %>
</div>
