<div class="container">
  <div class="row justify-content-center">
    <div class ="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class:"shadow p-3 mb-3 bg-light rounded", local: true) do |f|%>

        <div class="row mb-3">
          <%= f.label :username, class:"col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :email, class:"col-2 col-form-label" %><br />
          <div class="col-10">
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter an email" %>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :password, class:"col-2 col-form-label" %><br />
          <div class="col-10">
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter a password" %>
          </div>
        </div>

        <div class="input-group justify-content-center mb-3">
          <%= f.submit "Sign up", class:"btn btn-primary"%>
        </div>
      <% end %>
    </div>
    <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-center" %>
  </div>
</div>